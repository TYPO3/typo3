# Default backend Page TSConfig
# This is intentionally different from Configuration/Sets/Styleguide/page.tsconfig
# due to that file only being applied in SiteSet frontend context, but this code here
# is needed for the backend.

colorPalettes {
  colors {
    styleguideTypo3 {
      value = #ff8700
      label = TYPO3 orange
    }
    styleguideBlue {
      value = #0080c9
      label = Blue
    }
    styleguideDarkgrey {
      value = #515151
      label = Dark grey
    }
    styleguideValid {
      value = #5abc55
      label = Valid
    }
    styleguideError {
      value = #dd123d
      label = Error
    }
  }

  palettes {
    styleguidePalette = styleguideTypo3, styleguideBlue, styleguideDarkgrey, styleguideValid, styleguideError
    limitedStyleguidePalette = styleguideTypo3, styleguideValid, styleguideError
  }
