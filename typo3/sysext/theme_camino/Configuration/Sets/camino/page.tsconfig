  tt_content {
    preview {
      camino_author = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Author.fluid.html
      camino_hero = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Hero.fluid.html
      camino_hero_small = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Hero.fluid.html
      camino_hero_text_only = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Hero.fluid.html
      camino_linklist = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Linklist.fluid.html
      camino_sociallinks = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Linklist.fluid.html
      camino_testimonial = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Testimonial.fluid.html
      camino_textmedia_teaser = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/TextmediaTeaser.fluid.html
      camino_textmedia_teaser_grid = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/TextmediaTeaserGrid.fluid.html
      camino_textteaser = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Textteaser.fluid.html
      text = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Textmedia.fluid.html
      textmedia = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Textmedia.fluid.html
      textpic = EXT:theme_camino/Resources/Private/Templates/ContentPreviews/Textmedia.fluid.html
    }
  }
}

